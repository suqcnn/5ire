{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "NodeNext",
    "lib": ["dom", "es2021"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll"
  },
  "include": ["src", "test", ".erb/scripts", ".eslintrc.js"],
  "exclude": ["release/build", "release/app/dist", ".erb/dll"]
}